
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Areas/YeniCore_Ynt1mPnl/Views/Shared/YonetimPanelAnaKatman.cshtml";
}


@model LiveMedy.Models.LiveMedyYntRoller

<partial name="~/Areas/YeniCore_Ynt1mPnl/Views/Shared/Part/AdminUyariMesajlariPart.cshtml" />

@using (Html.BeginForm("Ekle", "AdminYoneticiRolleri", FormMethod.Post, new { @role = "form", @id = "frmRolEkle" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>YÖNETİCİ ROLÜ EKLE</h4>
        </div>
        <div class="panel-body">
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.HiddenFor(r => r.RolId)
                <div class="form-group ">
                    <div class="col-md-2">
                        <label class="control-label">Rol</label>
                    </div>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(r => r.Adi, new { @class = "required form-control" })
                        @Html.ValidationMessageFor(r => r.Adi, String.Empty, new { @class = "validate" })
                    </div>
                </div>
            </div>

            <div class="form-group col-md-offset-2">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Listeye geri dön", "Index")
        </div>
    </div>
}



