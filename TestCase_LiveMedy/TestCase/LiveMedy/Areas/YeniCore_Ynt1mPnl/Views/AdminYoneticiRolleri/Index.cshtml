
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/YeniCore_Ynt1mPnl/Views/Shared/YonetimPanelAnaKatman.cshtml";
}


@model List<LiveMedy.Models.LiveMedyYntRoller>

<div class="panel-heading">
    <a href="/YeniCore_Ynt1mPnl/AdminYoneticiRolleri/Ekle">
        <span><strong>Rol eklemek için tıklayınız</strong></span>
        <span><strong></strong></span>
    </a>

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>YÖNETİCİ ROLLERİ LİSTESİ</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Rol</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rol in Model)
                        {
                            <tr id="tr_@rol.RolId">
                                <td>
                                    @rol.Adi
                                </td>
                                <td>
                                    <button type="button" class="btn btn-info btn-circle" title="Düzenle" onclick="RolHakDuzenle(@rol.RolId)">
                                        <i class="fa fa-list"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    function RolHakDuzenle(id) {
        var url = "/YeniCore_Ynt1mPnl/AdminYoneticiRolleri/HakDuzenle/" + id;
        $(location).attr('href', url);
    }

</script>



<link href="~/css/core.css" rel="stylesheet" />
<script src="~/js/core.js"></script>