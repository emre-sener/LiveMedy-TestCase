@{
    ViewBag.Title = "SifreDegistir";
    Layout = "~/Areas/YeniCore_Ynt1mPnl/Views/Shared/YonetimPanelAnaKatman.cshtml";
}

@using LiveMedy.Areas.YeniCore_Ynt1mPnl.Models.DTO
<partial name="~/Areas/YeniCore_Ynt1mPnl/Views/Shared/Part/AdminUyariMesajlariPart.cshtml" />

@using (Html.BeginForm("SifreDegistir", "AdminKullanicilar", FormMethod.Post, new { @role = "form", @id = "frmSifreDegistir" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>ŞİFRE DEĞİŞTİR</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @if (ViewBag.SfrSonuc != null && ViewBag.SfrSonuc == true)
                    {
                        <div class="alert alert-success fade in inBlock">
                            <h5><strong></strong>Şifreniz başarı ile değiştirilmiştir.</h5>
                        </div>
                    }
                    else if (ViewBag.SfrSonuc != null && ViewBag.SfrSonuc == false)
                    {
                        <div class="alert alert-danger fade in inBlock">
                            <h5><strong></strong>Şifre değiştirme işlemi sırasında hata oluştu. Lütfen bilgilerinizi kontrol ediniz.</h5>
                        </div>
                    }
                </div>
            </div>

            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group ">
                    <div class="col-md-2">
                        <label class = "control-label">Geçerli Şifre</label>
                    </div>
                    <div class="col-lg-6">
                        @Html.Password("sfr", null, new { @class = "form-control  required" })
                        @Html.ValidationMessage("sfr", string.Empty, new { @class = "validate" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <label class="control-label">Yeni Şifre</label>
                    </div>
                    <div class="col-lg-6">
                        @Html.Password("yeniSfr", null, new { @class = "form-control  required" })
                        @Html.ValidationMessage("yeniSfr", string.Empty, new { @class = "validate" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <label class="control-label">Yeni Şifre Tekrar</label>
                    </div>
                    <div class="col-lg-6">
                        @Html.Password("yeniSfrTekrar", null, new { @class = "form-control  required" })
                        @Html.ValidationMessage("yeniSfrTekrar", string.Empty, new { @class = "validate" })
                    </div>
                </div>
            </div>

            <div class="form-group col-md-offset-2">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    <envoirement>
        <script src="~/Scripts/YonetimPaneli/validate/jquery.validate.js"></script>
        <script src="~/Scripts/YonetimPaneli/validate/jquery.validate.unobtrusive.js"></script>
        <script src="~/Scripts/YonetimPaneli/validate/messages_tr.js"></script>
    </envoirement>
<script>
    $("#frmSifreDegistir").validate({ 
        rules: {
            yeniSfr: {
                required: true,
            },
            yeniSfrTekrar: {
                equalTo: "#yeniSfr",
            }
        }
    });
</script>

